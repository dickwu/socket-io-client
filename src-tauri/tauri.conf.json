{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "socket-io-client",
  "version": "0.1.7",
  "identifier": "com.socketio.client",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Socket.IO Client",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright 2025",
    "license": "MIT",
    "shortDescription": "A desktop application for testing Socket.IO connections.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdGNDgwNjRGQ0FEMEZGRjQKUldUMC85REtUd1pJZjdJcE1pa1d0ZWdiSFJJRXhCVUMvaWVLMEJscmdQRGs1TXlaR281bExnS24K",
      "endpoints": [
        "https://github.com/dickwu/socket-io-client/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "quiet"
      }
    }
  }
}
